<div class="form-index">
  <div class='form-header'>
      <h1 class='form-header-text text-center'>
        マイページの作成
      </h1>
  </div>
  <%= form_with model: @profile, local: true do |f| %>
  <div class='form-wrap'>
    <div class="card text-center profile-card">
      <div class="img-upload">
        <div class="weight-bold-text text-center">
          はっきりと顔の分かる　あなたの顔写真
        </div>
        <div class="click-upload">
          <p>
            クリックしてファイルをアップロード
          </p>
          <%= f.file_field :image, id: "company_image" %>
        </div>
      </div>
      <div class="form-group d-flex justify-content-end">
        <div class="input-image", id="image-list"></div>
        <div class="form-group flex-column mr-4">
          名前を入力してください
          <div class='input-name-wrap d-flex flex-row mb-4'>
            <%= f.text_field :last_name, class:"input-name", id:"last-name", placeholder:"例) 山田" %>
            <%= f.text_field :first_name, class:"input-name", id:"first-name", placeholder:"例) 陸太郎" %>
        </div>
          振り仮名を入力してください
        <div class='input-name-wrap d-flex flex-row'>
          <%= f.text_field :last_name_kana, class:"input-name", id:"last-name-kana", placeholder:"例) ヤマダ" %>
          <%= f.text_field :first_name_kana, class:"input-name", id:"first-name-kana", placeholder:"例) リクタロウ" %>
        </div>
      </div>
    </div>
    <div class="form-group d-flex justify-content-center">
      <div class="form-birth-group d-flex">
        <div class='form-text-wrap d-flex flex-column mr-4 mt-4'>
            <div class='input-birth-wrap mb-2'>年齢
              <%= f.collection_select(:birth_id, Birth.all, :id, :name, {}, {class:"select-box ml-4", id:"birth"}) %> 歳
            </div>
            <div class="form-group">
              <div class='form-text-wrap mt-2 mb-2 mr-2'>性別
                <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"select-box ml-4", id:"prefecture"}) %>
              </div>
              <div class='form-text-wrap mt-3'>
                <label class="form-text">電話番号</label>
              </div>
              <%= f.text_field :phone_number, class:"input-default", id:"phone-number", placeholder:"例）09012345678",maxlength:"11"%>
            </div>
        </div>
      </div>
      <div class='shipping-address-form ml-4'>
        <h5 class='info-input-haedline'>
          お住まい情報入力
        </h5>
        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">都道府県</label>
          </div>
          <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"prefecture"}) %>
        </div>
        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">市区町村</label>
          </div>
          <%= f.text_field :city, class:"input-default", id:"city", placeholder:"例）横浜市緑区"%>
        </div>
      </div>
    </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">応募の際に伝えておくこと</label>
        </div>
        <%= f.text_area :pr, class:"input-default-pr", id:"pr", placeholder:"例) 特に無ければ空欄でOK", size: "10x10"%>
      </div>
    <div class="actions">
      <%= f.submit "登録" %>
    </div>
  </div>
  <% end %>
  </div>
</div>