<%= render "shared/recruitmentheader" %>
<% if @company_recruitment.blank?%>
   <div class="recruitment-blank text-center">
      <h3 class="m-5">現在募集中の求人はありません</h3>
   </div>
<% else %>
<h3 class="text-center mt-5 mb-5"><%= "#{@recruitment.name}の詳細ページ" %></h3>
<div class="recruitment card mt-5 mb-5">
   <div class="recruitment-images d-flex justify-content-between">
      <% @recruitment.images.each do |image| %>
         <%= image_tag image, class:'images mb-5'%>
      <% end %>
   </div>
   <div class="recruit-info card-body">
      <h3 class="recruit-category text-center mb-5">
         <%= @recruitment.name %>
      </h3>
      <div class="recruit-form d-flex justify-content-around">
         <h5 class="recruit-category mb-3">
            <%= @recruitment.category %>
         </h5>
         <h4 class="card-title mb-3">
            <%= @recruitment.work %>
         </h4>
      </div>
      <hr>
      <div class="card-text d-flex justify-content-around mt-5">
         <div>
            <h4 class="text-center">給与</h4>
            <%= @recruitment.price %>
         </div>
         <div>
            <h4 class="text-center">勤務日</h4>
            <%= @recruitment.work_day%>
         </div>
         <div>
            <h4 class="text-center">勤務時間</h4>
            <%= @recruitment.work_time%>
         </div>
      </div>
      <hr>
      <div class="card-text mt-5">
         <h3 class="text-center">勤務地住所</h3>
         <div class="address-group d-flex justify-content-center">
            <div class="address-category ml-2">
               <%= @recruitment.prefecture.name%>
            </div>
            <div class="address-category ml-2">
               <%= @recruitment.city%>
            </div>
            <div class="address-category ml-2">
               <%= @recruitment.address%>
            </div>
            <div class="address-category ml-2">
               <%= @recruitment.building%>
            </div>
         </div>
      </div>
      <hr>
      <div class="card-text mt-5">
         <div class="address-category">
            <%= @recruitment.pr%>
         </div>
      </div>
   </div>
</div>

<div class="user-profile card" style="width: 18rem;">
  <svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"/><text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text></svg>
  <div class="card-body">
    <h5 class="card-title">応募しているユーザーのプロフィール</h5>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    <a href="#" class="btn btn-primary">Go somewhere</a>
  </div>
</div>
<% end %>
